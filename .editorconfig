# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.ps1]
end_of_line = crlf

[{Makefile,**.make,**.mk}]
# Use tabs for indentation (Makefile requires tabs)
indent_size = 8
indent_style = tab
insert_final_newline = false
